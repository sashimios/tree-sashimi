abinfo 'Installing shell completions ...'

install -Dvm644 completions/completions.bash \
    "$PKGDIR"/etc/bash_completion.d/exa
install -Dvm644 completions/completions.zsh \
    "$PKGDIR"/usr/share/zsh/site-functions/_exa
install -Dvm644 completions/completions.fish \
    "$PKGDIR"/usr/share/fish/vendor_completions.d/exa.fish
