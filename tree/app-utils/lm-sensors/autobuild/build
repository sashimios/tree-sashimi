make PREFIX=/usr \
     SBINDIR=/usr/bin \
     LIBDIR=/usr/lib \
     MANDIR=/usr/share/man \
     CFLAGS="${CPPFLAGS} ${CFLAGS} ${LDFLAGS}" \
     EXLDFLAGS="${LDFLAGS}" \
     PROG_EXTRA=sensord user
make BUILD_STATIC_LIB=0 \
     PREFIX=/usr \
     SBINDIR=/usr/bin \
     LIBDIR=/usr/lib \
     MANDIR=/usr/share/man \
     EXLDFLAGS="${LDFLAGS}" \
     PROG_EXTRA=sensord \
     DESTDIR="$PKGDIR" user_install
