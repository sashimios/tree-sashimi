     SBINDIR=/usr/bin \
     LIBDIR=/usr/lib \
     MANDIR=/usr/share/man \
     EXLDFLAGS="${LDFLAGS}" \
     CFLAGS="${CPPFLAGS} ${CFLAGS} ${LDFLAGS}" \
     PROG_EXTRA=
make BUILD_STATIC_LIB=0 \
     PREFIX=/usr \
     SBINDIR=/usr/bin \
     LIBDIR=/usr/lib \
     MANDIR=/usr/share/man \
     EXLDFLAGS="${LDFLAGS}" \
     DESTDIR="$PKGDIR" \
     PROG_EXTRA= install
