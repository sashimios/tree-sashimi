PKGNAME=procps
PKGDES="Utilities for monitoring your system and its processes"
PKGDEP="ncurses"
PKGPROV="procps-ng"
PKGSEC=utils

# Note: --disable-kill, kill(1) is provided by util-linux.
AUTOTOOLS_AFTER="--exec-prefix=/ \
                 --enable-largefile \
                 --enable-nls \
                 --disable-rpath \
                 --enable-watch8bit \
                 --disable-libselinux \
                 --enable-harden-flags \
                 --enable-pidof \
                 --disable-kill \
                 --enable-w \
                 --enable-skill \
                 --enable-examples \
                 --enable-sigwinch \
                 --enable-wide-percent \
                 --enable-wide-memory \
                 --enable-modern-top \
                 --enable-numa \
                 --enable-w-from \
                 --disable-whining \
                 --with-ncurses \
                 --with-systemd \
                 --without-elogind"
