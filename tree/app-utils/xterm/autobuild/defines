PKGNAME=xterm
PKGSEC=x11
PKGDEP="x11-lib ncurses xbitmaps libutempter"
PKGDES="X Terminal Emulator"

AUTOTOOLS_AFTER="--with-app-defaults=/usr/share/X11/app-defaults/ \
                 --with-x \
                 --disable-full-tgetent \
                 --disable-imake \
                 --enable-ansi-color \
                 --enable-88-color \
                 --enable-256-color \
                 --enable-broken-osc \
                 --enable-broken-st \
                 --enable-load-vt-fonts \
                 --enable-i18n \
                 --enable-wide-chars \
                 --enable-doublechars \
                 --enable-warnings \
                 --enable-tcap-query \
                 --enable-logging \
                 --enable-dabbrev \
                 --enable-freetype \
                 --enable-luit \
                 --enable-mini-luit \
                 --enable-narrowproto \
                 --enable-exec-xterm \
                 --with-tty-group=tty \
                 --with-utempter"
RECONF=0
