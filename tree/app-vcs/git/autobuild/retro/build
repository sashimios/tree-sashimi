make prefix=/usr gitexecdir=/usr/lib/git-core \
     CFLAGS="${CPPFLAGS} ${CFLAGS}" LDFLAGS="${LDFLAGS}" \
     USE_LIBPCRE=1 \
     $( if [[ "${CROSS:-$ARCH}" = "riscv64" ]]; then
            echo "NO_LIBPCRE1_JIT=1"
        fi ) \
     NO_CROSS_DIRECTORY_HARDLINKS=1 \
     MAN_BOLD_LITERAL=1 \
     DEFAULT_EDITOR=/usr/bin/editor all

make -C contrib/subtree prefix=/usr all

make prefix=/usr gitexecdir=/usr/lib/git-core \
     CFLAGS="${CPPFLAGS} ${CFLAGS}" LDFLAGS="${LDFLAGS}" \
     USE_LIBPCRE=1 \
     $( if [[ "${CROSS:-$ARCH}" = "riscv64" ]]; then
            echo "NO_LIBPCRE1_JIT=1"
        fi ) \
     NO_CROSS_DIRECTORY_HARDLINKS=1 \
     MAN_BOLD_LITERAL=1 \
     DEFAULT_EDITOR=/usr/bin/editor \
     DESTDIR="$PKGDIR" install

mkdir -p "$PKGDIR"/usr/share/bash-completion/completions/
install -m644 ./contrib/completion/git-completion.bash \
              "$PKGDIR"/usr/share/bash-completion/completions/git

mkdir -p "$PKGDIR"/usr/share/git/
install -m644 ./contrib/completion/git-prompt.sh "$PKGDIR"/usr/share/git/git-prompt.sh

make -C contrib/subtree prefix=/usr DESTDIR="$PKGDIR" install

cp -a ./contrib/* "$PKGDIR"/usr/share/git/
